<?xml version='1.0' encoding='utf-8'?>
<widget id="com.rabahghiles.cordovaprojects" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>CharityFood</name>
    <description>
        CharityFood is an application which lists the organizations which offer aid to people (food, goods, ...) and which facilitates their location by the user.
    </description>
    <author email="rabahghiles@gmail.com" href="https://rabahghiles.com">Rabah GHILES</author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="res/android/logo.png" density="ldpi" />
        <icon src="res/android/logo.png" density="mdpi" />
        <icon src="res/android/logo.png" density="hdpi" />
        <icon src="res/android/logo.png" density="xhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>